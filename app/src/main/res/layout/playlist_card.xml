<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playlistImage"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistNameField"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="PlayList name"/>
        <TextView
            android:id="@+id/playlistCreatorField"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="PlayList creator"/>
        <TextView
            android:id="@+id/playlistCountField"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="PlayList songs count"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>